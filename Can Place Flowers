        for(int i=0;i<flowerbed.size();i++){
            if(flowerbed[i]==0){
        if(( i == 0 || flowerbed[i-1] == 0) and 
                  (i == flowerbed.size()-1 || flowerbed[i+1] == 0)){
                    n--;
                    flowerbed[i]=1;
                }
            }
        }
        return (n<=0);
    }
